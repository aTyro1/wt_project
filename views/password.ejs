<html>
    <head>
        <link href="/styles/tailwind.css" rel="stylesheet">
        <link href="/styles/style.css" rel="stylesheet">
        <link href="/styles/design.css" rel="stylesheet">
        <script>
            function f()
            {
                document.getElementById("pw").focus();
            }
        </script>
    </head>
    <body onload="f()">
        <div class="container ml-2 " style="margin-left: 50rem;
        margin-top: 6rem;
        box-shadow: saddlebrown;
        box-shadow: 2px,red;
        box-shadow: 10px 10px blue;
        padding: 4rem;
        width: 24rem;">
            <div class="container">
                <img class="h-20 w-20 ml-5" style="margin-left: 5rem;" src="/tu logo.png">
                <form method="post" style="margin-top: 3rem;" action="login">
                    <label for="pw"><p style="color:blue;">Admin Password</p></label><br>
                    <input type="password" style="border:1px solid blue; border-radius: 4px; color: blue; margin-bottom: 2rem;" id="pw" name="password"><br>
                    <% 
                        if(invalid!='not'){%>
                    <p style="font-style: italic; color: sienna;"> <%= invalid %></p><br>
                    <%}%>

                    <button type="submit" class="btn mt-4">Sign In</button>
                </form>
            </div>
        </div>
    </body>
</html>     